

package com.example.contextmenuapp;

import androidx.appcompat.app.AppCompatActivity;
import android.graphics.Color;
import android.os.Bundle;
import android.view.ContextMenu;
import android.view.MenuItem;
import android.view.View;
import android.widget.RelativeLayout;
import android.widget.TextView;
import android.widget.Toast;

public class MainActivity extends AppCompatActivity {

    RelativeLayout layout;
    TextView textView;
    int count = 0;
    boolean bgColorToggle = false;
    boolean textColorToggle = false;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        layout = findViewById(R.id.layout);
        textView = findViewById(R.id.textView);

        // Register TextView for context menu
        registerForContextMenu(textView);
    }

    // Inflate context menu
    @Override
    public void onCreateContextMenu(ContextMenu menu, View v, ContextMenu.ContextMenuInfo menuInfo) {
        super.onCreateContextMenu(menu, v, menuInfo);
        getMenuInflater().inflate(R.menu.context_menu, menu);
        menu.setHeaderTitle("Choose an option");
    }

    // Handle context menu item clicks
    @Override
    public boolean onContextItemSelected(MenuItem item) {
        switch (item.getItemId()) {

            case R.id.counter:
                count++;
                textView.setText("Count: " + count);
                Toast.makeText(this, "Counter increased", Toast.LENGTH_SHORT).show();
                return true;

            case R.id.bgcolor:
                if (bgColorToggle) {
                    layout.setBackgroundColor(Color.WHITE);
                } else {
                    layout.setBackgroundColor(Color.CYAN);
                }
                bgColorToggle = !bgColorToggle;
                Toast.makeText(this, "Background color changed", Toast.LENGTH_SHORT).show();
                return true;

            case R.id.textcolor:
                if (textColorToggle) {
                    textView.setTextColor(Color.BLACK);
                } else {
                    textView.setTextColor(Color.RED);
                }
                textColorToggle = !textColorToggle;
                Toast.makeText(this, "Text color changed", Toast.LENGTH_SHORT).show();
                return true;
            case R.id.clear:
                count = 0;
                textView.setText("Long press here for options");
                layout.setBackgroundColor(Color.WHITE);
                textView.setTextColor(Color.BLACK);
                bgColorToggle = false;
                textColorToggle = false;
                Toast.makeText(this, "Cleared to default state", Toast.LENGTH_SHORT).show();
                return true;

            case R.id.exit:
                finishAffinity();
                Toast.makeText(this, "App Closed", Toast.LENGTH_SHORT).show();
                return true;

            default:
                return super.onContextItemSelected(item);
        }
    }
}


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Long press here for options"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_centerInParent="true" />
</RelativeLayout>




res/menu/context_menu.xml


<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/counter"
        android:title="Counter" />
    <item android:id="@+id/bgcolor"
        android:title="Change Background" />
    <item android:id="@+id/textcolor"
        android:title="Change Text Color" />
    <item
        android:id="@+id/clear"
        android:title="Clear" />
    <item android:id="@+id/exit"
        android:title="Exit" />
</menu>




android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
